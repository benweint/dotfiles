config defaultToCurrentScreen true
config nudgePercentOf         screenSize
config resizePercentOf        screenSize

# Push Bindings (presets)
bind l:shift;cmd   push right bar-resize:screenSizeX/2
bind h:shift;cmd   push left  bar-resize:screenSizeX/2
bind j:shift;cmd   push up    bar-resize:screenSizeY/2
bind k:shift;cmd   push down  bar-resize:screenSizeY/2

# Fullscreen bindings
bind 0:cmd;alt      throw 0 resize
bind 1:cmd;alt      throw 1 resize

# Focus Bindings
bind u:shift;cmd    focus left
bind i:shift;cmd    focus right

# Window Hints
bind e:cmd hint

bind g:cmd grid padding:5 0:6,2 1:8,3

